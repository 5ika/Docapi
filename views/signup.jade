extends layout

block content
    .container
        h1
            span.fa.fa-user-plus  Sign-up
        if(message != '')
            .alert !{message}
        form(action='/user/signup' method='post')
            div.form-group
                label Username
                input(type='text' name='username').form-control
            div.form-group
                label Email
                input(type='text' name='email').form-control
            div.form-group
                label Password
                input(type='password' name='password').form-control#pass
            div.form-group
                label Password again
                input(type='password').form-control#pass2
            button(type='submit').btn.btn-primary.btn-lg.btn-block.signup-btn.disabled Sign-up

block script
    script.
        $('#pass2').keyup(function(){
            if($('#pass2').val() != $('#pass').val()){
                $('#pass2').css("box-shadow","0 1px 0 0 red").css("border-bottom","1px solid red");
                $('.signup-btn').addClass('disabled');
            } else{
                $('#pass2').css("box-shadow","0 1px 0 0 green").css("border-bottom","1px solid green");
                $('.signup-btn').removeClass('disabled');
            }
        });
